= form_for ([@issue.product, @issue]) do |f|
  - if @issue.errors.any?
    #error_explanation
      %h2= "#{pluralize(@issue.errors.count, "error")} prohibited this review from being saved:"
      %ul
        - @issue.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :severity
    = f.select :severity, %w(cosmetic minor major critical), include_blank: 'Choose one'

  .field
    = f.label :comment
    = f.text_area :comment, rows: 10, cols: 50
  .actions
    = f.submit 'Save'
