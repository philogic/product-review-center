= form_tag '/messages/create' do

  = hidden_field_tag 'message[originator]', originator
  = label_tag 'To: ', nil, class: 'field'
  = text_field_tag 'message[recipient]', recipient
  %br
  = label_tag 'Message content', nil, class: 'field'
  = text_area_tag 'message[content]','Put your message here', rows: 10, cols: 50
  %br
  = submit_tag 'Send message', class: 'actions'