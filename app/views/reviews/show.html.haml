%p
  %strong Rating:
  = @review.rating

%p
  %strong Comment:
  = @review.comment


%span.action_1
  = link_to 'Back', product_reviews_path(@review.product)
- if current_customer.id == @review.customer.id
  %span.action_2
    = link_to 'Edit', edit_product_review_path(@review.product, @review)
- else
  %span.action_3
    = link_to(image_tag('mail.png'), messages_new_path(params: { originator: current_customer,
                                                                  recipient: @review.customer }),
                                                                  title: 'Send message to the reviewer',
                                                                  data: { confirm: 'Do you really want to send a message to the author?' })
%span.action_4
  = link_to(image_tag('mailbox.png'),
            messages_index_path(params: { mailbox: current_customer }),
            title: 'New Messages')
                                                                  